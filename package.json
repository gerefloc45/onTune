{
  "name": "aiontune",
  "version": "1.0.0",
  "description": "Discord bot per musica ottimizzato con cache intelligente, lazy loading e performance monitoring",
  "main": "src/bot.js",
  "scripts": {
    "start": "node --expose-gc --max-old-space-size=512 src/bot.js",
    "start:prod": "node --expose-gc --max-old-space-size=1024 --optimize-for-size src/bot.js",
    "dev": "NODE_ENV=development LOG_LEVEL=debug nodemon --expose-gc src/bot.js",
    "web": "node src/web/server.js",
    "setup": "node setup.js",
    "deploy-commands": "node deploy-commands.js",
    "enable-intents": "node enable-privileged-intents.js",
    "performance-test": "node --expose-gc --trace-gc src/bot.js",
    "memory-profile": "node --inspect --expose-gc src/bot.js",
    "maintenance": "node scripts/maintenance.js",
    "maintenance:logs": "node scripts/maintenance.js logs",
    "maintenance:cache": "node scripts/maintenance.js cache",
    "maintenance:backup": "node scripts/maintenance.js backup",
    "maintenance:health": "node scripts/maintenance.js health",
    "health": "curl -s http://localhost:3000/api/health | json_pp",
    "metrics": "curl -s http://localhost:3000/api/metrics | json_pp",
    "status": "curl -s http://localhost:3000/api/status | json_pp",
    "lint": "eslint src/ scripts/ --ext .js",
    "lint:fix": "eslint src/ scripts/ --ext .js --fix",
    "lint:check": "eslint src/ scripts/ --ext .js",
    "format": "prettier --write \"src/**/*.{js,json,md}\" \"scripts/**/*.{js,json,md}\" \"*.{js,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,json,md}\" \"scripts/**/*.{js,json,md}\" \"*.{js,json,md}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "jest --testPathPattern=e2e",
    "audit": "npm audit --audit-level=moderate",
    "update-deps": "npm update && npm audit fix",
    "clean": "node scripts/maintenance.js cache logs",
    "backup": "node scripts/maintenance.js backup",
    "prepare": "husky install",
    "postinstall": "husky install"
  },
  "dependencies": {
    "@discordjs/voice": "^0.16.1",
    "@distube/ytdl-core": "^4.16.12",
    "cors": "^2.8.5",
    "discord.js": "^14.11.0",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "fluent-ffmpeg": "^2.1.2",
    "helmet": "^7.1.0",
    "ngrok": "^5.0.0-beta.2",
    "node-fetch": "^3.3.2",
    "opusscript": "^0.0.8",
    "prism-media": "^1.3.5",
    "scdl-core": "^1.1.0",
    "socket.io": "^4.7.4",
    "sodium-native": "^4.0.4",
    "spotify-web-api-node": "^5.0.2",
    "winston": "^3.17.0",
    "youtube-sr": "^4.3.4"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "prettier": "^3.1.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@commitlint/format": "^17.4.4",
    "@commitlint/plugin-help-wanted": "^17.4.4",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "jest-watch-typeahead": "^2.2.2",
    "supertest": "^6.3.3",
    "@types/jest": "^29.5.8",
    "nodemon": "^3.0.2",
    "husky": "^8.0.3"
  },
  "keywords": [
    "discord",
    "bot",
    "music",
    "voice",
    "web",
    "dashboard"
  ],
  "author": "Geremia",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Geremia95/aiontune.git"
  }
}
